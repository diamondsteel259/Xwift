# Multistage docker build for Xwift Testnet, requires docker 17.05

# builder stage
FROM ubuntu:20.04 AS builder

RUN set -ex && \
    apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get --no-install-recommends --yes install \
        build-essential \
        ca-certificates \
        cmake \
        curl \
        git \
        pkg-config

WORKDIR /src
COPY . .

ARG NPROC
RUN set -ex && \
    git submodule init && git submodule update && \
    rm -rf build && \
    if [ -z "$NPROC" ] ; \
    then make -j$(nproc) depends target=x86_64-linux-gnu ; \
    else make -j$NPROC depends target=x86_64-linux-gnu ; \
    fi

# runtime stage
FROM ubuntu:20.04

RUN set -ex && \
    apt-get update && \
    apt-get --no-install-recommends --yes install ca-certificates curl && \
    apt-get clean && \
    rm -rf /var/lib/apt
COPY --from=builder /src/build/x86_64-linux-gnu/release/bin /usr/local/bin/

# Create xwift user
RUN adduser --system --group --disabled-password xwift && \
	mkdir -p /wallet /home/xwift/.xwift && \
	chown -R xwift:xwift /home/xwift/.xwift && \
	chown -R xwift:xwift /wallet

# Contains the blockchain
VOLUME /home/xwift/.xwift

# Generate your wallet via accessing the container and run:
# cd /wallet
# monero-wallet-cli --testnet
VOLUME /wallet

EXPOSE 28080
EXPOSE 28081

# switch to user xwift
USER xwift

ENTRYPOINT ["monerod"]
CMD ["--testnet", "--p2p-bind-ip=0.0.0.0", "--p2p-bind-port=28080", "--rpc-bind-ip=0.0.0.0", "--rpc-bind-port=28081", "--non-interactive", "--confirm-external-bind"]